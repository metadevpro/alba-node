{
  "name": "alba",
  "version": "0.0.2",
  "description": "Alba: Reference implementation for CAL Profile in TypeScript",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && npm run lint && tsc -p tsconfig.json",
    "build:w": "tsc -p tsconfig.json -w",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test:tdd": "mocha --reporter min --require ts-node/register \"src/**/*.spec.ts\" \"integration-tests/**/*.spec.ts\" --watch",
    "test": "mocha --recursive --require ts-node/register \"src/**/*.spec.ts\" \"integration-tests/**/*.spec.ts\"",
    "cover": "nyc npm test",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "start": "ts-node src/index.ts"
  },
  "keywords": [
    "alba",
    "cal"
  ],
  "author": {
    "name": "Pedro J. Molina",
    "url": "http://pjmolina.com"
  },
  "license": "MIT",
  "mocha.options": {
    "compilers": "ts:ts-node/register",
    "mocha.files.glob": [
      "src/**/*.spec.ts",
      "integration-tests/**/*.spec.ts"
    ]
  },
  "mocha.requires": [
    "ts-node/register"
  ],
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "typings",
      "src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "text"
    ],
    "all": true
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-http": "^3.0.5",
    "@types/express": "^4.16.1",
    "@types/inversify": "^2.0.33",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.23",
    "@types/reflect-metadata": "^0.1.0",
    "browserify": "^16.2.3",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "coveralls": "^3.0.2",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^12.0.2",
    "rimraf": "^2.6.3",
    "ts-node": "^7.0.0",
    "tslint": "^5.12.1",
    "typescript": "^2.9.2",
    "uglifyjs-folder": "^1.5.1"
  },
  "dependencies": {
    "express": "^4.18.2",
    "inversify": "^4.13.0",
    "reflect-metadata": "^0.1.13"
  }
}
